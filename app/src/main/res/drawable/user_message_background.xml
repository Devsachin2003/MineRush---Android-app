<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E0F7FA" /> <!-- Light cyan color -->

    <!-- Corner radius for rounded edges -->
    <corners android:radius="16dp" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#B2EBF2" /> <!-- Slightly darker border -->
</shape>
